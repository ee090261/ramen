<div class="container">
	<div class="row">
      <h1>本日のハントしたラーメン</h1>
		  <%= form_for(@post, url: posts_path) do |f| %>
		    <div class="flex">
		    	<!--div><%# f.label :店舗名カラム, "店舗名" %></div>
		    	<div><%# f.text_field :店舗名カラム %></div-->
		    	<!-- 店舗名カラムの問題解決後に変更を加える -->

				<div>
					<%= f.label :dish_image, "画像" %>
					<div class="">
						<%= attachment_image_tag @post, :dish_image,fallback: "no-image.png" %>
					</div>
				</div>
				<table>
					<thead>
						<tr>
							<th></th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td><%= f.label :menu_title, "メニュー" %></td>
							<td><%= f.text_field :menu_title %></td>
						</tr>
						<tr>
							<td><%= f.label :price, "価格" %></td>
							<td><%= f.text_field :price %></td>
						</tr>
						<tr>
							<td><%= f.label :comment, "コメント" %></td>
							<td><%= f.text_area :comment %></td>
						</tr>
					</tbody>
				</table>
				<div class="flex align-center pl5">
					<%= f.submit "submit", class: "btn btn-primary" %>
				</div>
		    </div>
		 <% end %>



</div>
</div>