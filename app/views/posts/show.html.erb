<h1>投稿詳細ページ</h1>

<%= link_to user_path(@user) do %>
  <%= attachment_image_tag @user , :user_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img img_prev" , fallback: "no-image.png" %>
<% end %>
<%= attachment_image_tag @post ,:dish_image, format: "jpeg", fallback: "no-image.png" %>

<tr>
  <td>メニュー名</td>
  <td><%= @post.menu_title %></td>
</tr>
<tr>
  <td>価格</td>
  <td><%= @post.price %>円</td>
</tr>
<tr>
  <td>店舗名</td>
  <td><%= @post.shop_name %></td>
</tr>
<tr>
  <td>所在地</td>
  <td><%= @post.adress %></td>
</tr>
<tr>
  <td>コメント</td>
  <td><%= @post.comment %></td>
</tr>
<tr>
	<% if @post.favorited_by?(current_user) %>
	  <%= link_to post_favorites_path(@post), method: :delete do %>
		  <i class="fa fa-heart" aria-hidden="true" style="color: red;"></i>
		  <%= @post.favorites.count %> いいね
	  <% end %>
	<% else %>
	  <%= link_to post_favorites_path(@post), method: :post do %>
		  <i class="fa fa-heart-o" aria-hidden="true"></i>
		  <%= @post.favorites.count %> いいね
	  <% end %>
	<% end %>
</tr>
<tr>
	<% if @post.user == current_user %>
	<%= link_to "Edit", edit_post_path(@post), class: "btn-sm btn-success edit_post_#{@post.id}" %>
	<%= link_to "Destroy", post_path(@post), method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_post_#{@post.id}" %>
	<% end %>
</tr>


<div>
	<td>みんなのコメント</td>
	<td><% @post.post_comments.each do |post_comment| %>
			<div>
			  <%= link_to post_comment.user.name, user_path(post_comment.user_id) %>
			</div>
			<div>
				<%= post_comment.comment %>
			</div>

			<% if post_comment.user == current_user %>
			  	 <%= link_to "削除", post_post_comment_path(post_comment.post, post_comment), method: :delete, class: "btn btn-danger pull-right" %>
			<% end %>
		<% end %>
	</td>
</div>
<div>
<%= form_for [@post, @comment] do |f| %>
	<div>
		<%= f.text_area :comment %>
	</div>
	<%= f.submit "投稿する", class: "btn btn-lg btn-base-1 mt-20 pull-right" %>
<% end %>
</div>

