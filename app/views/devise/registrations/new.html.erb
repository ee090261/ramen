<div class="container">


    <div class="col-lg-3">
    </div>

  <div class="col-lg-6">
      <h2>新規ユーザー登録</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <table class="customer_info customer_form">
        <thead>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <tr>
            <td>ユーザーネーム</td>
            <td><%= f.text_field :name, autofocus: true, :placeholder => "ニックネーム可" %></td>
          </tr>
          <tr>
            <td><%= f.label :email %></td>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>
          <tr>
            <td><%= f.label :prefecture %></td>
            <td><%= f.select :prefecture, User.prefectures.keys, {prompt: '選択してください'}, class: 'form-control btn btn-default' %></td>
          </tr>
          <tr>
            <td>好みのジャンル</td>
            <td><%= f.select :genres, User.genres.keys, {prompt: '選択してください'}, class: 'form-control btn btn-default' %></td>
          </tr>

          <tr class="field">
            <% if @minimum_password_length %>
            <td><em>(<%= f.label :password, "パスワード(#{@minimum_password_length}文字以上)" %>)</em></td>
            <% end %><br />
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>


          <tr class="field">
            <td><%= f.label :password_confirmation, "パスワード(確認用)" %></td><br />
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>


          <tr class="actions">
            <td></td>
            <td><%= f.submit "登録する", :class=>"btn btn-success" %></td>
          </tr>
        </tbody>
      </table>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>


    <div class="col-lg-3">
    </div>


</div>

