<div class="container">
  <div class="col-lg-3">
  </div>

  <div class="col-lg-6">
    <h2>ログインはこちらから</h2>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field">
        <%= f.label :メールアドレス %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="field">
        <%= f.label :パスワード %><br />
        <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="actions">
        <%= f.submit "ログイン",class: "btn btn-info" %>
      </div>
    <% end %>

    <%#= render "devise/shared/links" %> <!--後日実装 -->
  </div>

  <div class="col-lg-3">
  </div>

</div>
