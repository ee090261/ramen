<div class="container">

    <div class="col-lg-3">
    </div>

    <div class="col-lg-6">
	<h1>ユーザー詳細</h1>

		<table class="row">
		  <div class="col-lg-6">
		  <%= attachment_image_tag @user , :user_image, :fill, 100, 100, format: 'jpeg', class: "img-circle pull-left profile-img img_prev" , fallback: "no-image.png" %>
		  </div>
		  <div class="col-lg-6">
			<thead>
				<tr>
					<th></th>
					<th></th>
				</tr>
			</thead>
			<tbody>
				<tr>
					<td>ユーザーネーム</td>
					<td><%= @user.name %></td>
				</tr>
				<tr>
					<td>好みのジャンル</td>
					<td><%= @user.genres %></td>
				</tr>
				<tr>
					<td>住まいの地域</td>
					<td><%= @user.prefecture %></td>
				</tr>
				<tr>
					<td>紹介文</td>
					<td><%= @user.introduction %></td>
				</tr>
				<% if current_user.id == @user.id %>
				<div>
					<%= link_to "登録情報変更", edit_user_path(@user.id), class: "btn btn-success" %>
				</div>
				<% end %>
			</tbody>
		  </div>
		</table>

	    <div class="row">
		<% @posts.each do |post| %>
			<div class="inner">
			  <%= link_to post_path(post) do %>
			    <div class="index-dish">
			    <%= attachment_image_tag post ,:dish_image, format: "jpeg", fallback: "no-image.png", class: 'img_prev' %>
			    </div>
	            <div class="post-info">
				  <span>
				  	<%= post.shop_name %><br>
				    <%= post.adress %>
				  </span>
			    </div>
			  <% end %>
			</div>
		<% end %>
	    </div>
	</div>
    <div class="col-lg-3">
    </div>
</div>






